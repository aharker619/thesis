@article{niebuhr_novel_1997,
	title = {A novel proline‐rich motif present in {ActA} of {Listeria} monocytogenes and cytoskeletal proteins is the ligand for the {EVH}1 domain, a protein module present in the {Ena}/{VASP} family},
	volume = {16},
	copyright = {Copyright © 1997 European Molecular Biology Organization},
	issn = {0261-4189, 1460-2075},
