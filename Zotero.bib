	keywords = {Actins, Adenosine Diphosphate, Adenosine Triphosphate, Biophysical Phenomena, Cell Movement, Hydrolysis, Listeria, Models, Biological, Models, Statistical, Movement, Protein Binding, Time Factors, biophysics, cytoskeleton},
	pages = {605--617}
}

@article{chen_ena/vasp_2014,
