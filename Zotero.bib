@article{klostermann_orthologous_2000,
	title = {The {Orthologous} {Human} and {Murine} {Semaphorin} 6A-1 {Proteins} ({SEMA}6A-1/{Sema}6A-1) {Bind} to the {Enabled}/{Vasodilator}-stimulated {Phosphoprotein}-like {Protein} ({EVL}) via a {Novel} {Carboxyl}-terminal {Zyxin}-like {Domain}},
