	keywords = {Actinin, Actins, Amino Acid Sequence, Binding, Competitive, Cross-Linking Reagents, Membrane Glycoproteins, Microfilament Proteins, Phosphatidylinositols, Phosphoproteins, Polymers, Protein Binding, Protein Isoforms, Protein Structure, Tertiary},
	pages = {2428--2437}
}

@article{sedeh_structure_2010,
	title = {Structure, {Evolutionary} {Conservation}, and {Conformational} {Dynamics} of {Homo} sapiens {Fascin}-1, an {F}-actin {Crosslinking} {Protein}},
