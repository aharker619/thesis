@article{kang_profilin_1997,
	title = {Profilin {Interacts} with the {Gly}-{Pro}-{Pro}-{Pro}-{Pro}-{Pro} {Sequences} of {Vasodilator}-{Stimulated} {Phosphoprotein} ({VASP}):  {Implications} for {Actin}-{Based} {Listeria} {Motility}},
