	number = {1},
	journal = {Current biology: CB},
	author = {Ribbeck, K and Kutay, U and Paraskeva, E and Görlich, D},
	month = jan,
	year = {1999},
	pmid = {9889126},
	keywords = {Guanosine Triphosphate, Hydrolysis, Karyopherins, Microscopy, Confocal, Nuclear Envelope, Nuclear Proteins, Receptors, Cytoplasmic and Nuclear, Substrate Cycling, ran GTP-Binding Protein},
	pages = {47--50}
}

