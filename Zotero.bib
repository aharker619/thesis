	keywords = {Animals, Cadherins, Caenorhabditis elegans, Caenorhabditis elegans Proteins, Epidermis, Intercellular Junctions, Nerve Tissue Proteins, Proto-Oncogene Proteins c-abl, Wiskott-Aldrich Syndrome Protein, Neuronal},
	pages = {1791--1796}
}

@article{pula_role_2008,
