	number = {24},
	urldate = {2014-05-17TZ},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Bertin, Aurelie and McMurray, Michael A. and Grob, Patricia and Park, Sang-Shin and Garcia, Galo and Patanwala, Insiyyah and Ng, Ho-leung and Alber, Tom and Thorner, Jeremy and Nogales, Eva},
