	journal = {Nature Materials},
	author = {Claessens, Mireille M. A. E. and Bathe, Mark and Frey, Erwin and Bausch, Andreas R.},
	month = sep,
	year = {2006},
	pages = {748--753}
}

@article{derosier_structure_1977,
